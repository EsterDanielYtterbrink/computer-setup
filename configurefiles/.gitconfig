[user]
	email = ester.ytterbrink@jayway.com
	name = Ester Ytterbrink
[core]
	excludesfile = /Users/esterytterbrink/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	st = status
	co = checkout
        ca = commit -a
        st = status
	l = log  --decorate=short --pretty=format:'%C(green)%d%C(red) %aN%Creset%n' --graph --all;
	ll = log  --decorate=short --pretty=format:'%C(blue)%h%C(green)%d%C(red) %aN%Creset (%cr)%n        %s%n ' --graph --all;
	k = log --graph --decorate --pretty=oneline --abbrev-commit;
	deps = submodule foreach 'git pull';

[diff]
        color = auto

[pager]
        color = true

[status]
        color = auto
[push]
	default = tracking
